[
    {
        "description": "simple enum validation",
        "schema": {"enum": [1, 2, 3]},
        "tests": [
            {
                "description": "one of the enum is valid",
                "data": 1,
                "valid": true
            },
            {
                "description": "missing enum is valid",

                "valid": true
            },
            {
                "description": "something else is invalid",
                "data": 4,
                "valid": false
            },
            {
                "description": "null is invalid",
                "data": null,
                "valid": false
            },
            {
                "description": "true is invalid",
                "data": true,
                "valid": false
            }
        ]
    },
    {
        "description": "heterogeneous enum validation",
        "schema": {"enum": [6, "foo", [], true, {"foo": 12}]},
        "tests": [
            {
                "description": "one of the enum is valid",
                "data": [],
                "valid": true
            },
            {
                "description": "something else is invalid",
                "data": null,
                "valid": false
            },
            {
                "description": "objects are deep compared",
                "data": {"foo": false},
                "valid": false
            }
        ]
    },
    {
        "description": "required enum validation",
        "schema": {"enum": ["a", "b", "c"], "required":true},
        "tests": [
            {
                "description": "one of the enum is valid",
                "data": "b",
                "valid": true
            },
            {
                "description": "missing enum is invalid",

                "valid": false
            },
            {
                "description": "something else is invalid",
                "data": "zzz",
                "valid": false
            }
        ]
    }
]
